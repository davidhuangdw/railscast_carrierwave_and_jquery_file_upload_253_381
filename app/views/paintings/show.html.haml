.page-header
  = link_to paintings_path, :class => 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_painting_path(@painting), :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show painting

%dl.dl-horizontal
  %dt Name:
  %dd= @painting.name
  %dt Image:
  %dd= image_tag @painting.image_url
